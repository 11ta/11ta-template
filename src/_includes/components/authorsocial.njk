<div class="flex items-center mt-4 md:justify-between">
  <div class="flex justify-center md:order-2 {{ colors.authorCustom.socialIcons or colors.authorDefault.socialIcons }}">

    {% if socialmedia.dribbble %}
      <a class="hover:{{ colors.authorCustom.SocialIconsHover or colors.authorDefault.socialIconsHover }}" alt="{{ title }} on Dribble" href="{{ socialmedia.dribbble | url }}">
        {% svg "dribbble", "Dribbble logo", "mx-2 h-10 w-10 fill-current" %}
      </a>
    {% endif %}

    {% if socialmedia.facebook %}
      <a class="hover:{{ colors.authorCustom.SocialIconsHover or colors.authorDefault.socialIconsHover }}" alt="{{ title }} on Facebook" href="{{ socialmedia.facebook | url }}">
