    {% if socialmedia.twitter %}
      <a class="hover:{{ colors.authorCustom.SocialIconsHover or colors.authorDefault.socialIconsHover }}" alt="{{ title }} on Twitter" href="{{ socialmedia.twitter | url }}">
        {% svg "twitter", "Twitter logo", "mx-2 h-10 w-10 fill-current" %}
