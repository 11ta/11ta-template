    {% if socialmedia.youtube %}
      <a class="hover:{{ colors.authorCustom.SocialIconsHover or colors.authorDefault.socialIconsHover }}" alt="{{ title }} on YouTube" href="{{ socialmedia.youtube | url }}">
        {% svg "youtube", "Youtube logo", "mx-2 h-10 w-10 fill-current" %}
