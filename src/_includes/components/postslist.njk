<section>
  <div class="container px-5 pt-8 pb-24 mx-auto">
    <div class="grid -mx-4 -my-8 lg:grid-cols-2">

      {% for post in postslist | reverse %}

        <div class="px-4 py-8">
          <div class="h-full">
            <div class="pl-6">
              {# Don't display the Post Date if structure.displayAuthors is true 
                  which will display a date in the authordate component below #}
              {% if not structure.displayAuthors %}
                <p class="text-sm leading-5 {{ colors.authorCustom.date or colors.authorDefault.date }}">
                  <time datetime="{{ post.date | dateToFormat("yyyy-MM-dd") }}">{{ post.date | dateToFormat("LLL dd, yyyy") }}</time>
                </p>
              {% endif %}

              <h3 class="mt-0 {{ colors.headingsCustom or colors.headingsDefault }}">
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
              </h3>
              <div class="leading-relaxed">
                <p>
                  {{ post.data.excerpt }}
                  {% set tags = post.data.tags %}
                  {% include "components/tagpills.njk" %}
                </p>
                {# Used conditionals here to keep control at the template levels rather than at the component level.  #}
                {# Display the Author block if structure.displayAuthors is true (default) #}
                {% if structure.displayAuthors %}
                  {# Only display the Author Block if there is a value for "author" in Post Frontmatter #}
                  {% if post.data.author %}
                    {% include "components/authordate.njk" %}
                  {% endif %}
                {% endif %}
              </div>
            </div>
          </div>
        </div>

      {% endfor %}

    </div>
  </div>
</section>