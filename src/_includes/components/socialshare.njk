{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(build.url) }}{%- endset -%}
{%- set ogImage -%}
{% if seo.image %}
  /assets/images/{{ seo.image }}
{% else %}
  {{ meta.siteImage }}
{% endif %}
{%- endset -%}

<div class="flex">

  <div class="{{ colors.socialShareCustom.color or colors.socialShareDefault.color }}">
    Share: 
  </div>

  {% if structure.g_showShareLinkedIn %}
    <div>
      <a aria-label="Share on LinkedIn"  class="{{ colors.socialShareCustom.color or colors.socialShareDefault.color }} hover:{{ colors.socialShareCustom.hover or colors.socialShareDefault.hover }}" alt="Share on LinkedIn" href="https://linkedin.com/shareArticle?mini=true&title={{ title | urlencode }}&url={{ absolutePageUrl }}" target="_blank">
        {% svg "linkedin", "LinkedIn logo", "mx-2 h-6 w-6 fill-current" %}
      </a>
    </div>
  {% endif %}

  {% if structure.g_showSharePinterest %}
    <div>
      <a aria-label="Share on Pinterest" class="{{ colors.socialShareCustom.color or colors.socialShareDefault.color }} hover:{{ colors.socialShareCustom.hover or colors.socialShareDefault.hover }}" alt="Share on Pinterest" href="https://pinterest.com/pin/create/button/?url={{ absolutePageUrl | urlencode }}&description=&media=" target="_blank">
        {% svg "pinterest", "Pinterest logo", "mx-2 h-6 w-6 fill-current" %}
      </a>
    </a>
  </div>
{% endif %}

{% if structure.g_showShareReddit %}
  <div>
    <a aria-label="Share on Reddit" class="{{ colors.socialShareCustom.color or colors.socialShareDefault.color }} hover:{{ colors.socialShareCustom.hover or colors.socialShareDefault.hover }}" alt="Share on Reddit"  href="https://reddit.com/submit?url={{ absolutePageUrl }}&title={{ title | urlencode }}"  target="_blank">
      {% svg "reddit", "Reddit logo", "mx-2 h-6 w-6 fill-current" %}
    </a>
  </div>
{% endif %}

{% if structure.g_showShareTwitter %}
  <div>
    <a aria-label="Share on Twitter" class="{{ colors.socialShareCustom.color or colors.socialShareDefault.color }} hover:{{ colors.socialShareCustom.hover or colors.socialShareDefault.hover }}" alt="Share on Twitter"  href="https://twitter.com/share?text={{ title | urlencode }}&url={{ absolutePageUrl }}">
      {% svg "twitter", "Twitter logo", "mx-2 h-6 w-6 fill-current" %}
    </a>
  </div>
{% endif %}

{% if structure.g_showShareEmail %}
  <div>
    <a class="{{ colors.socialShareCustom.color or colors.socialShareDefault.color }} hover:{{ colors.socialShareCustom.hover or colors.socialShareDefault.hover }}" alt="Share via Email"  href="mailto:?subject={{ title | urlencode }}&body={{ absolutePageUrl }}">
      {% svg "email", "Send email", "mx-2 h-6 w-6 fill-current" %}

    </a>
  </div>
{% endif %}

</div>