<section class="mt-24">
  <div class="container px-5 pb-24 mx-auto">
    <div class="flex flex-wrap -mx-4 -mt-4 -mb-10 sm:-m-4">

      {% for post in postslist | reverse %}
        <div class="p-4 mb-6 md:w-1/2 xl:w-1/3 sm:mb-0">
          <div class="relative flex h-48 overflow-hidden border border-gray-200 rounded-lg shadow-md hover:shadow-lg">
            <a class="" href="{{ post.url | url }}">
              <img class="absolute inset-0 object-cover object-center w-full h-full" src={% if post.data.images.thumb %}"/assets/images/{{ post.data.images.thumb }}"{% else %}"/assets/images/david-kovalenko-G85VuTpw6jg-unsplash.jpg"{% endif %} alt="">
            </a>
          </div>
          <h3 class="pt-4 heading">
            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
          </h3>
          <time datetime="{{ post.date | machineDate }}">
            <small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a>
            </small>
          </time>
          <p class="text-base leading-relaxed">
            {{ post.data.excerpt }}
          </p>
        </div>
      {% endfor %}

    </div>
  </div>
</section>

