---
layout: base
---

{% if images.feature %}
  <figure class="w-screen h-48 -mx-12 -mt-12 sm:h-64 lg:h-96 sm:-mx-20 lg:-mx-32 ">
    <img class="object-cover w-full h-full" src="/assets/images/{{ images.feature }}" alt="">
  </figure>
{% endif %}

<article class="{{ structure.g_pageWidth }} my-12">
  <h1 class="{{ colors.headingsCustom or colors.headingsDefault }}">{{ seo.title or title }}</h1>
  <div class="text-sm text-gray-500">
    <time datetime="{{ date | machineDate }}">
      {{ date | readableDate }}
    </time>
    {# Global disable author display in /src/_data/structure.js #}
    {% if structure.displayAuthors %}
      {# Only display the Author Block if there is a value for "author" in Post Frontmatter #}
      {% if author %}
     by <a class="hover:underline" href="/authors/{{ author | slug }}/">{{ author }}</a>
      {% endif %}
    {% endif %}

  </div>

  {{ layoutContent | safe }}

  {# If you don't want to display the Tag Pills, set "false" in /src/_data/structure.js #}
  {% if structure.g_showTagPills %}
    <div class="border-t mt-4 pt-4 {{ colors.borderCustom.color or colors.borderDefault.color }} ">
      {% include "components/tagpills.njk" %}
    </div>
  {% endif %}

</article>